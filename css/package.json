{
  "name": "wangqi-website-tests",
  "version": "1.0.0",
  "description": "Property-based tests for Wang Qi's website aesthetic upgrade",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "css-tree": "^2.3.1",
    "fast-check": "^3.15.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^23.0.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/test-setup.js"
    ]
  }
}
